@model IEnumerable<MyDictionary.Core.Entities.Word>
@using MyDictionary.Core.Entities

@{
    ViewData["Title"] = "Vocabulary";
}

<div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
    <div>
        <h1 class="text-2xl font-bold text-slate-900 dark:text-slate-100">Vocabulary</h1>
        <p class="text-slate-500 dark:text-slate-400">Manage your word collection</p>
    </div>
    <div class="flex gap-2">
        <form asp-action="GenerateMissingExamples" method="post" class="inline">
            <button type="submit" class="flex items-center gap-2 bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-200 px-4 py-2 rounded-lg text-sm font-medium transition-colors" title="Generate missing examples with AI" onclick="return confirm('This will generate example sentences for all words that are missing them. This might take a while. Continue?');">
                <i class="fa-solid fa-wand-magic-sparkles text-purple-500"></i> Generate Examples
            </button>
        </form>
        <a asp-action="ImportCsv" class="flex items-center gap-2 bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-200 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
            <i class="fa-solid fa-file-import text-green-600 dark:text-green-400"></i> Import CSV
        </a>
        <a asp-action="ExportPdf" class="flex items-center gap-2 bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-200 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
            <i class="fa-solid fa-file-pdf text-red-500"></i> Export PDF
        </a>
        <a asp-action="Create" class="flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
            <i class="fa-solid fa-plus"></i> Add New
        </a>
    </div>
</div>

<div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden mb-6">
    <div class="p-4 border-b border-slate-200 bg-slate-50">
        <form method="get" class="flex flex-col md:flex-row gap-4">
            <div class="flex-grow relative">
                <i class="fa-solid fa-search absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"></i>
                <input type="text" name="search" value="@ViewBag.Search" placeholder="Search words..." class="w-full pl-10 pr-4 py-2 rounded-lg border border-slate-300 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent">
            </div>
            <select name="type" class="px-4 py-2 rounded-lg border border-slate-300 focus:outline-none focus:ring-2 focus:ring-primary-500" onchange="this.form.submit()">
                <option value="">All Types</option>
                @foreach (var type in Enum.GetValues(typeof(PartOfSpeech)))
                {
                    <option value="@type" selected="@(ViewBag.Type?.ToString() == type.ToString())">@type</option>
                }
            </select>
            <select name="difficulty" class="px-4 py-2 rounded-lg border border-slate-300 focus:outline-none focus:ring-2 focus:ring-primary-500" onchange="this.form.submit()">
                <option value="">All Difficulties</option>
                @foreach (var diff in Enum.GetValues(typeof(Difficulty)))
                {
                    <option value="@diff" selected="@(ViewBag.Difficulty?.ToString() == diff.ToString())">@diff</option>
                }
            </select>
        </form>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left text-sm">
            <thead class="bg-slate-50 text-slate-600 font-medium border-b border-slate-200">
                <tr>
                    <th class="px-6 py-4">Word</th>
                    <th class="px-6 py-4">Translation</th>
                    <th class="px-6 py-4">Type</th>
                    <th class="px-6 py-4">Difficulty</th>
                    <th class="px-6 py-4">Next Review</th>
                    <th class="px-6 py-4 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-200">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-slate-50 transition-colors">
                        <td class="px-6 py-4 font-medium text-slate-900">@item.WordText</td>
                        <td class="px-6 py-4 text-slate-600">@item.Translation</td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-800">
                                @item.PartOfSpeech
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            @{
                                var colorClass = item.Difficulty switch
                                {
                                    Difficulty.Easy => "bg-green-100 text-green-800",
                                    Difficulty.Medium => "bg-yellow-100 text-yellow-800",
                                    Difficulty.Hard => "bg-red-100 text-red-800",
                                    _ => "bg-slate-100 text-slate-800"
                                };
                            }
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @colorClass">
                                @item.Difficulty
                            </span>
                        </td>
                        <td class="px-6 py-4 text-slate-500">
                            @if (item.NextReviewDate <= DateTime.UtcNow)
                            {
                                <span class="text-red-600 font-medium">Due Now</span>
                            }
                            else
                            {
                                @item.NextReviewDate.ToString("MMM dd")
                            }
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex justify-end gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-slate-400 hover:text-primary-600 transition-colors">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="inline" onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="text-slate-400 hover:text-red-600 transition-colors">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    @if (!Model.Any())
    {
        <div class="p-12 text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-slate-100 text-slate-400 mb-4">
                <i class="fa-solid fa-book text-2xl"></i>
            </div>
            <h3 class="text-lg font-medium text-slate-900 mb-1">No words found</h3>
            <p class="text-slate-500 mb-6">Get started by adding your first word to the dictionary.</p>
            <a asp-action="Create" class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                <i class="fa-solid fa-plus"></i> Add Word
            </a>
        </div>
    }
</div>
